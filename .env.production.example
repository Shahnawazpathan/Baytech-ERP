# Production Environment Variables Template
# Copy this to .env.production and fill in your production values

# Database (Turso)
TURSO_DATABASE_URL=your_production_turso_database_url
TURSO_AUTH_TOKEN=your_production_turso_auth_token

# Next.js
NODE_ENV=production
PORT=3000

# Application
APP_URL=https://your-production-domain.com

# Optional: Logging
LOG_LEVEL=error

# Optional: Redis (for distributed caching - future enhancement)
# REDIS_URL=redis://localhost:6379
